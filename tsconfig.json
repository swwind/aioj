{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "app/**/*.ts",
    "src/**/*.ts",
  ]
}